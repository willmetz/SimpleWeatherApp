<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.willmetz.simpleweatherapp.WeatherListActivity">


    <com.example.willmetz.views.WeatherHeader
        android:id="@+id/weather_header"
        android:layout_width="match_parent"
        android:layout_height="220dp"/>

    <com.example.willmetz.views.WeatherDetails
        android:id="@+id/weather_details"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/weather_header"/>

</RelativeLayout>
